<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="my_robo" >

 <xacro:include filename="$(find simc)/urdf/common.xacro"/>
 <xacro:property name="M_PI" value="3.14159274"/>
<xacro:property name="mu" value="0.5"/>




 <link name="base_link">
    <box_create mass="30" height="0.004" width="0.877" depth="0.877"/>

 </link>

<unit_create base_name="base_wheel1_link" wheel_name="wheel1"/>

  <joint name="base_joint1" type="continuous">
    <parent link="base_link"/>
    <child link="base_wheel1_link"/>
    <origin rpy="0 0 0" xyz="0.265 0.265 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="wheel1_joint" type="continuous">
    <parent link="base_wheel1_link"/>
    <child link="wheel1"/>
    <origin rpy="0 0 0" xyz="0 0 0.028"/>
    <axis xyz="0 1 0"/>
  </joint>



<unit_create base_name="base_wheel2_link" wheel_name="wheel2"/>



  <joint name="base_joint2" type="continuous">
    <parent link="base_link"/>
    <child link="base_wheel2_link"/>
    <origin rpy="0 0 0" xyz="-0.265 0.265 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="wheel2_joint" type="continuous">
    <parent link="base_wheel2_link"/>
    <child link="wheel2"/>
    <origin rpy="0 0 0" xyz="0 0 0.028"/>
    <axis xyz="0 1 0"/>
  </joint>


<unit_create base_name="base_wheel3_link" wheel_name="wheel3"/>

  <joint name="base_joint3" type="continuous">
    <parent link="base_link"/>
    <child link="base_wheel3_link"/>
    <origin rpy="0 0 0" xyz="-0.265 -0.265 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="wheel3_joint" type="continuous">
    <parent link="base_wheel3_link"/>
    <child link="wheel3"/>
    <origin rpy="0 0 0" xyz="0 0 0.028"/>
    <axis xyz="0 1 0"/>
  </joint>



<unit_create base_name="base_wheel4_link" wheel_name="wheel4"/>


  <joint name="base_joint4" type="continuous">
    <parent link="base_link"/>
    <child link="base_wheel4_link"/>
    <origin rpy="0 0 0" xyz="0.265 -0.265 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="wheel4_joint" type="continuous">
    <parent link="base_wheel4_link"/>
    <child link="wheel4"/>
    <origin rpy="0 0 0" xyz="0 0 0.028"/>
    <axis xyz="0 1 0"/>
  </joint>-->



<link name="base_footprint"/>
  <joint name="base_joint" type="fixed">
   <parent link="base_footprint"/>
   <child link="base_link"/>
   <origin rpy="0 0 0" xyz="0 0 0.022"/>

 </joint>


Hokuyo Laser 
  <link name="hokuyo_link1">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://rrbot_description/meshes/hokuyo.dae"/>
      </geometry>
    </visual>


  </link>
  <joint name="hokuyo_joint1" type="fixed">
    <axis xyz="0 1 0" />
    <origin xyz="0.4385 -0.4385 0.002" rpy="0 0 ${M_PI*3/4}"/>
    <parent link="base_link"/>
    <child link="hokuyo_link1"/>
  </joint>

  <link name="hokuyo_link2">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://rrbot_description/meshes/hokuyo.dae"/>
      </geometry>
    </visual>
  </link>

  <joint name="hokuyo_joint2" type="fixed">
    <axis xyz="0 1 0" />
    <origin xyz="-0.4385 0.4385 0.002" rpy="0 0 ${-M_PI/4}"/>
    <parent link="base_link"/>
    <child link="hokuyo_link2"/>
  </joint>


<link name="marker1">


    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
    </visual>


  </link>
  <joint name="fix1" type="fixed">
    <origin xyz="0 0 0.3" rpy="0 0 0"/>
    <parent link="wheel1"/>
    <child link="marker1"/>
  </joint>

<link name="marker2">


    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
    </visual>


  </link>
  <joint name="fix2" type="fixed">
    <origin xyz="0 0 0.3" rpy="0 0 0"/>
    <parent link="wheel2"/>
    <child link="marker2"/>
  </joint>

<link name="marker3">


    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
    </visual>


  </link>
  <joint name="fix3" type="fixed">
    <origin xyz="0 0 0.3" rpy="0 0 0"/>
    <parent link="wheel3"/>
    <child link="marker3"/>
  </joint>

<link name="marker4">


    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
    </visual>

    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>
  <joint name="fix4" type="fixed">
    <origin xyz="0 0 0.3" rpy="0 0 0"/>
    <parent link="wheel4"/>
    <child link="marker4"/>
  </joint>




  <!-- ===============  Transmission ===============-->
<trans_create base_joint_name="base_joint1" wheel_name="wheel1"/>
<trans_create base_joint_name="base_joint2" wheel_name="wheel2"/>
<trans_create base_joint_name="base_joint3" wheel_name="wheel3"/>
<trans_create base_joint_name="base_joint4" wheel_name="wheel4"/>





  <!-- =============== Gazebo =============== -->
  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>my_robo</robotNamespace>
    </plugin>
  </gazebo>

 <gazebo reference="base_link">
   <selfCollide>true</selfCollide>
    <mu1 value="${mu}" />
